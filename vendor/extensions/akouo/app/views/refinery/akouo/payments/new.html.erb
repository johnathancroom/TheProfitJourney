<% content_for :body do %>
  <%= form_tag refinery.akouo_account_plans_path, :method => "PUT", :class => "styled_form" do %>

    <h1>Select a Plan</h1>
    <% @plans.each_with_index do |plan, index| %>
      <% if index % 2 == 0 %>
        <div class="radio">
      <% end %>

        <%= radio_button_tag "plan", index, (true if index == @user.get_plan) if plan[0] != "" %>
        <%= label_tag "plan_#{index}", plan[0] %>

      <% if index % 2 > 0 %>
        </div>
      <% end %>
    <% end %>

    <hr>

    <h1>Payment Information</h1>
    <div>
      <%= label_tag :first_name, "First Name (on card)" %>
      <%= text_field_tag :first_name, @user.first_name, :size => 30 %>
    </div>

    <div>
      <%= label_tag :last_name, "Last Name (on card)" %>
      <%= text_field_tag :last_name, @user.last_name, :size => 30 %>
    </div>

    <div>
      <%= label_tag :card_number %>
      <%= text_field_tag :card_number, "", :autocomplete => "off", :size => 30 %>
    </div>

    <div>
      <%= label_tag :card_expiration %>
      <%= select_tag :card_expiry_month, options_for_select(@months) %>
      <%= select_tag :card_expiry_year, options_for_select(@years) %>
    </div>

    <div>
      <%= submit_tag "Submit", :class => "button" %>
      <%= link_to "Back to Account", refinery.akouo_account_path, :class => "button" %>
      <%= content_tag :span, "By submitting, you agree to charge your credit card as selected.", :class => "payment_notice" %>
    </div>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>