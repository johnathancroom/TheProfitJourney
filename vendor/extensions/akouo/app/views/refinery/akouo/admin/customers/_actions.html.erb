<ul>
  <% if ::Refinery::Akouo::Admin::CustomersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.akouo_admin_customers_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_akouo_admin_customer_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Akouo::Admin::CustomersController.sortable? && ::Refinery::Akouo::Customer.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Akouos"),
                 refinery.akouo_admin_customers_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Akouos"),
                 refinery.akouo_admin_customers_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
