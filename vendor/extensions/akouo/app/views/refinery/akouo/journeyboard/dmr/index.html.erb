<% content_for :body_content_title do %>
  <%= "#{page_title}: Daily Managers Report" %>
<% end %>

<% content_for :body do %>
  <%= link_to 'New DMR Entry', refinery.new_akouo_journeyboard_dmr_path %> |
  <%= link_to 'Entries', refinery.akouo_journeyboard_entries_path %>

  <hr>

  <%= render 'data_select' %>

  <hr>

  <table>
    <thead>
      <tr>
        <th>Replacement</th>
        <th>Daily Actual</th>
        <th>Total Budget</th>
      </tr>
    </thead>
    <tbody>
      <% @dmr_entries.columns.each do |column| %>
        <tr>
          <td><%= column.name %></td>
          <td><%= @dmr_entries.sum(column.name) %></td>
          <td>&ndash;</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= render :partial => '/refinery/content_page', :locals => { :full_width => true } %>