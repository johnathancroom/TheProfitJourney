<% content_for :body_content_title do %>
  <%= "#{page_title}: Comfort Advisors" %>
<% end %>

<% content_for :body do %>
  <%= link_to "Add Comfort Advisor", refinery.new_akouo_journeyboard_comfort_advisor_path %>

  <hr>

  <ul>
    <% if @comfort_advisors.blank? %>
      <li>No Comfort Advisors Yet</li>
    <% else %>
      <% @comfort_advisors.each do |comfort_advisor| %>
        <li>
          <%= comfort_advisor.name %>
          <%= link_to "Edit", refinery.edit_akouo_journeyboard_comfort_advisor_path(comfort_advisor) %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>

<%= render "/refinery/content_page" %>