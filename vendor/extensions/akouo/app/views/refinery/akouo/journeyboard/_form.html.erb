<%= form_for @entry, :url => path, :html => { :class => "styled_form" } do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> need to be corrected before continuing:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :technician_id, "Technician" %>
    <%= f.select :technician_id, @technicians.collect { |x| [x.name, x.id] } %>
  </div>

  <div>
    <%= f.label :profit_center_id, "Profit Center" %>
    <%= f.select :profit_center_id, @profit_centers.collect { |x| [x.pcn, x.id] } %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.date_select :date, :order => [:month, :day, :year] %>
  </div>

  <div>
    <%= f.label :revenue %>
    <%= f.money_field :revenue %>
  </div>

  <div>
    <%= f.label :commission %>
    <%= f.money_field :commission %>
  </div>

  <div>
    <%= f.label :todays_pay, "Today's Pay" %>
    <%= f.money_field :todays_pay %>
  </div>

  <div>
    <%= f.label :fuel_cost %>
    <%= f.money_field :fuel_cost %>
  </div>

  <div>
    <%= f.label :other_cost %>
    <%= f.money_field :other_cost %>
  </div>

  <div>
    <%= f.label :add_on, "Add-on" %>
    <%= f.number_field :add_on %>
  </div>

  <div>
    <%= f.label :leads %>
    <%= f.number_field :leads %>
  </div>

  <div>
    <%= f.label :opportunities %>
    <%= f.number_field :opportunities %>
  </div>

  <div>
    <%= f.label :tickets %>
    <%= f.number_field :tickets %>
  </div>

  <div>
    <%= f.label :hours %>
    <%= f.money_field :hours %>
  </div>

  <div>
    <%= f.submit "Submit", :class => "button" %>
  </div>
<% end %>