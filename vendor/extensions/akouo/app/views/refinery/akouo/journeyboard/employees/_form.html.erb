<%= form_for @employee, :url => path, :html => { :class => 'styled_form' } do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :type %>
    <%= f.select :type, @employee_types %>
  </div>

  <div>
    <%= f.label :hourly_rate %>
    <%= f.money_field :hourly_rate %>
  </div>

  <%= f.submit 'Submit', :class => 'button' %>
<% end %>