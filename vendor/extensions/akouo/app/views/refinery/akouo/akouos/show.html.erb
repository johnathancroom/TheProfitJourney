<% content_for :body_content_title do %>
  <%= @akouo.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Id</h1>
    <p>
      <%=raw @akouo.id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="akouos">
      <% @akouos.each do |akouo| %>
        <li>
          <%= link_to akouo.title, refinery.akouo_akouo_path(akouo) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
