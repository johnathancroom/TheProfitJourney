<% content_for :body_content_title do %>
  Start
  <%= link_to "Edit", refinery.akouo_start_edit_path, :class => "button" %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Doing Business As</h1>
    <%=raw @customer.cdba %>

    <h1>Franchisee First Name</h1>
    <%=raw @customer.cfn %>

    <h1>Last Name (Used as a reference)</h1>
    <%=raw @customer.cln %>

    <h1>Date Assembled</h1>
    <%=raw @customer.cidate.to_formatted_s(:date) %>

    <h1>History Financial Comparison Start Date</h1>
    <%=raw @customer.ccsd.to_formatted_s(:date) %>

    <h1>History Financial Comparison End Date</h1>
    <%=raw @customer.cced.to_formatted_s(:date) %>

    <h1>Projection Start Date</h1>
    <%= raw @customer.ccpd.to_formatted_s(:date) %>

    <h1>Average Number of Holidays &amp; Vacations Yearly &ndash; Field Personnel</h1>
    <%= raw @customer.cah %>
  </section>
<% end %>

<%= render '/refinery/content_page' %>
