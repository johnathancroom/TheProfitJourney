<% content_for :body do %>
  <%= form_for @profit_center, :url => refinery.akouo_start_path, :html => { :method => "PUT", :class => "form" } do |user| %>
    <%= user.fields_for :customer do |f| %>
      <%= f.label :cdba, "Doing Business As" %>
      <%= f.text_field :cdba %>

      <%= f.label :cfn, "Franchisee First Name" %>
      <%= f.text_field :cfn %>

      <%= f.label :cln, "Last Name (Used as a reference)" %>
      <%= f.text_field :cln %>

      <%= f.label :cidate, "Date Assembled" %>
      <%= f.date_select :cidate, :start_year => 1980 %>

      <%= f.label :ccsd, "History Financial Comparison Start Date" %>
      <%= f.date_select :ccsd, :start_year => 1980 %>

      <%= f.label :cced, "History Financial Comparison End Date" %>
      <%= f.date_select :cced, :start_year => 1980 %>

      <%= f.label :ccpd, "Projection Start Date" %>
      <%= f.date_select :ccpd, :start_year => 1980 %>

      <%= f.label :cah, "Average Number of Holidays & Vacations Yearly â€“ Field Personnel" %>
      <%= f.number_field :cah %>
    <% end %>

    <%= user.submit "Save changes", :class => "button" %>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>
