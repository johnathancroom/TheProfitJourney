<% content_for :body do %>
  <%=raw @page.content_for(:body) %>

  <%= form_for @customer, :url => refinery.akouo_start_path, :html => { :method => 'PUT', :class => 'styled_form horiz' } do |f| %>
    <div>
      <%= f.label :cdba, 'Doing Business As' %>
      <%= f.text_field :cdba %>
    </div>

    <div>
      <%= f.label :cfn, 'Owner First Name' %>
      <%= f.text_field :cfn %>
    </div>

    <div>
      <%= f.label :cln, 'Owner Last Name' %>
      <%= f.text_field :cln %>
    </div>

    <div>
      <%= f.label :cidate, 'Date Assembled' %>
      <%= f.date_select :cidate, :start_year => 1980, :order => [:month, :day, :year] %>
    </div>

    <div>
      <%= f.label :ccsd, 'History Financial Comparison Start Date' %>
      <%= f.date_select :ccsd, :start_year => 1980, :order => [:month, :day, :year] %>
    </div>

    <div>
      <%= f.label :cced, 'History Financial Comparison End Date' %>
      <%= f.date_select :cced, :start_year => 1980, :order => [:month, :day, :year] %>
    </div>

    <div>
      <%= f.label :ccpd, 'Projection Start Date' %>
      <%= f.date_select :ccpd, :start_year => 1980, :order => [:month, :day, :year] %>
    </div>

    <div>
      <%= f.label :cah, 'Average Number of Holidays & Vacations Yearly â€“ Field Personnel' %>
      <%= f.number_field :cah %>
    </div>

    <!--<hr>-->

    <%#= f.label :profit_center_names %>
    <%#= f.text_field :profit_center_name_1 %>
    <%#= f.text_field :profit_center_name_2 %>
    <%#= f.text_field :profit_center_name_3 %>
    <%#= f.text_field :profit_center_name_4 %>

    <%= f.submit 'Save changes', :class => 'button' %>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>
