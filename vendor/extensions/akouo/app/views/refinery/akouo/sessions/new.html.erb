<% content_for :body do %>
  <%= form_for resource, :as => resource_name, :url => refinery.akouo_login_path, :html => { :class => "styled_form" } do |f| %>
    <div>
      <%= f.label :login %>
      <%= f.text_field :login %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div>
      <label></label>

      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>

      <%= link_to "Sign Up", refinery.akouo_register_path %>
      or
      <%= link_to "Reset Password", refinery.new_refinery_user_password_path %>
    </div>

    <%= f.submit "Sign In", :class => "button" %>
  <% end %>
<% end %>

<%= render '/refinery/content_page' %>