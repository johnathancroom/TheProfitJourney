<ul>
  <% if ::Refinery::Workshops::Admin::WorkshopsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.workshops_admin_workshops_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_workshops_admin_workshop_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Workshops::Admin::WorkshopsController.sortable? && ::Refinery::Workshops::Workshop.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Workshops"),
                 refinery.workshops_admin_workshops_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Workshops"),
                 refinery.workshops_admin_workshops_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
