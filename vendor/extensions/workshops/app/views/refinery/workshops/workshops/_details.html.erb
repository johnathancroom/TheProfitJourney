<table class="workshop-meta">
  <thead>
    <tr>
      <th>Location</th>
      <th>Seats Available</th>
      <th>Price</th>
      <th>Date</th>
      <th class="text-right"><%#= link_to "Sign up!", refinery.signup_workshops_workshop_path, :class => "signup" %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @workshop.location %></td>
      <td><%= "12/#{@workshop.seats}" %></td>
      <td><%= number_to_currency @workshop.price %></td>
      <td><%= @workshop.date.to_formatted_s(:pretty) %></td>
      <td></td>
    </tr>
  </tbody>
</table>