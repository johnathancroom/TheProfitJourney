<% content_for :body do %>
  <%=raw @page.content_for(:body) %>

  <ol class="workshops">
    <% @workshops.each do |workshop| %>
      <li>
        <a href="<%= refinery.workshops_workshop_path(workshop) %>">
          <ul>
            <li><h2><%= workshop.title %> <span><%= "(#{workshop.location})" %></span></h2></li>
            <li><%= workshop.date %></li>
            <li><%= workshop.time %></li>
            <li class="anchor">Learn more&hellip;</li>
          </ul>
        </a>
      </li>
    <% end %>
  </ol>
<% end %>

<%= render '/refinery/content_page' %>
