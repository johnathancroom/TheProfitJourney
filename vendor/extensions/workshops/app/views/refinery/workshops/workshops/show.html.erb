<% content_for :body_content_title do %>
  <%= @workshop.title %>
  <%= link_to "Register to Attend", refinery.akouo_register_path, :class => "button" %>
<% end %>
<% content_for :title do %>
  <%= @workshop.title %>
<% end %>

<% content_for :body do %>
  <table class="workshop-meta">
    <thead>
      <tr>
        <th>Location</th>
        <th>Seats Available</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @workshop.location %></td>
        <td><%= "#{@workshop.seats-@workshop.users.count}/#{@workshop.seats}" %></td>
        <td><%= @workshop.date.to_formatted_s(:pretty) %></td>
      </tr>
    </tbody>
  </table>

  <p>
    <%=raw @workshop.description %>
  </p>
<% end %>

<%= render '/refinery/content_page' %>
