<% content_for :body_content_title do %>
  <%= @workshop.title %>
<% end %>
<% content_for :title do %>
  <%= @workshop.title %>
<% end %>

<% content_for :body do %>
  <table class="workshop-meta">
    <thead>
      <tr>
        <th>Location</th>
        <th>Seats Available</th>
        <th>Date</th>
        <th class="text-right"><a href="#" class="signup">Sign up!</a></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @workshop.location %></td>
        <td><%= "12/#{@workshop.seats}" %></td>
        <td><%= @workshop.date.to_formatted_s(:pretty) %></td>
        <td></td>
      </tr>
    </tbody>
  </table>

  <p>
    <%=raw @workshop.description %>
  </p>
<% end %>

<%= render '/refinery/content_page' %>
